                    <td>${player.team}</td>
                    <td>${player.country}</td>
                    <td>${player.age}</td>
                    <td>€${player.marketValue}M</td>
                    <td>${player.height} cm</td>
                    <td>${player.weight}</td>
                    <td>${player.position}</td>
                    <td>${player.goals}</td>
                    <td>${player.assists}</td>
