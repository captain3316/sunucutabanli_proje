<%- include('partials/header', {title: 'Optimal Oyuncu'}) %>
<%- include('partials/sidebar') %>

<div class="content">
    <div class="page-header">
        <h1>Optimal Oyuncu Analizi</h1>
        <div class="filters">
            <button class="filter-btn active" onclick="filterByPosition('all')">Tümü</button>
            <% Object.keys(positions).forEach(position => { %>
                <button class="filter-btn" onclick="filterByPosition('<%= position %>')"><%= position %></button>
            <% }); %>
        </div>
    </div>

    <div class="optimal-container">
        <div class="chart-card full-width">
            <h2>Verimlilik Skoru Dağılımı</h2>
            <canvas id="efficiencyChart"></canvas>
        </div>

        <div class="players-grid">
            <% players.forEach(player => { %>
                <div class="player-card" data-position="<%= player.mevki_ad %>">
                    <div class="efficiency-score">
                        <div class="score"><%= player.verimlilik_skoru %></div>
                        <div class="label">Verimlilik Skoru</div>
                    </div>
                    <div class="player-info">
                        <h3><%= player.oyuncu_ad %></h3>
                        <p class="position"><%= player.mevki_ad %></p>
                        <p class="team"><%= player.takim_ad %></p>
                    </div>
                    <div class="stats-grid">
                        <div class="stat">
                            <span class="label">Yaş</span>
                            <span class="value"><%= player.oyuncu_yas %></span>
                        </div>
                        <div class="stat">
                            <span class="label">Değer</span>
                            <span class="value">€<%= player.oyuncu_degeri %>M</span>
                        </div>
                        <div class="stat">
                            <span class="label">Gol</span>
                            <span class="value"><%= player.toplam_gol %></span>
                        </div>
                        <div class="stat">
                            <span class="label">Asist</span>
                            <span class="value"><%= player.toplam_assist %></span>
                        </div>
                    </div>
                    <div class="recommendation">
                        <% if (player.verimlilik_skoru >= 60) { %>
                            <span class="badge high">Yüksek Verimlilik (<%= player.verimlilik_skoru %>)</span>
                        <% } else if (player.verimlilik_skoru >= 40) { %>
                            <span class="badge medium">Orta Verimlilik (<%= player.verimlilik_skoru %>)</span>
                        <% } else { %>
                            <span class="badge low">Düşük Verimlilik (<%= player.verimlilik_skoru %>)</span>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<style>
    .optimal-container {
        padding: 20px;
    }

    .players-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .player-card {
        background: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        position: relative;
        transition: transform 0.3s ease;
    }

    .player-card:hover {
        transform: translateY(-5px);
    }

    .efficiency-score {
        position: absolute;
        top: -15px;
        right: 20px;
        background: #1a237e;
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        text-align: center;
    }

    .efficiency-score .score {
        font-size: 1.2em;
        font-weight: bold;
    }

    .efficiency-score .label {
        font-size: 0.8em;
        opacity: 0.8;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 15px;
        margin-top: 15px;
    }

    .stat {
        text-align: center;
        padding: 10px;
        background: #f8f9fa;
        border-radius: 10px;
    }

    .stat .label {
        font-size: 0.8em;
        color: #666;
    }

    .stat .value {
        display: block;
        font-size: 1.2em;
        font-weight: bold;
        color: #1a237e;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 0.8em;
        font-weight: bold;
    }

    .badge.high {
        background: #4caf50;
        color: white;
    }

    .badge.medium {
        background: #ff9800;
        color: white;
    }

    .badge.low {
        background: #f44336;
        color: white;
    }

    .filters {
        margin: 20px 0;
    }

    .filter-btn {
        padding: 8px 16px;
        margin-right: 10px;
        border: 1px solid #1a237e;
        border-radius: 20px;
        background: transparent;
        color: #1a237e;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn.active {
        background: #1a237e;
        color: white;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Verimlilik grafiği
    const ctx = document.getElementById('efficiencyChart');
    new Chart(ctx, {
        type: 'scatter',
        data: {
            datasets: [{
                label: 'Oyuncular',
                data: <%- JSON.stringify(players.map(p => ({
                    x: p.oyuncu_degeri,
                    y: p.verimlilik_skoru,
                    label: p.oyuncu_ad
                }))) %>,
                backgroundColor: 'rgba(54, 162, 235, 0.5)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            return `${context.raw.label}: ${context.raw.y} verimlilik`;
                        }
                    }
                }
            },
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Piyasa Değeri (Milyon €)'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Verimlilik Skoru (0-100)',
                    },
                    min: 0,
                    max: 100,
                    ticks: {
                        stepSize: 10
                    }
                }
            }
        }
    });

    function filterByPosition(position) {
        const cards = document.querySelectorAll('.player-card');
        const buttons = document.querySelectorAll('.filter-btn');
        
        buttons.forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');

        cards.forEach(card => {
            if (position === 'all' || card.dataset.position === position) {
                card.style.display = 'flex';
            } else {
                card.style.display = 'none';
            }
        });
    }
</script>

