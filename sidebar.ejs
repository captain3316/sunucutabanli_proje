    </div>
    <div class="sidebar-menu">
        <a href="/takimim" class="menu-item <%= currentPage === 'takimim' ? 'active' : '' %>">
            <i class="fas fa-home"></i>
            Takımım
        </a>
        <a href="/transfer-listesi" class="menu-item <%= currentPage === 'transfer-listesi' ? 'active' : '' %>">
            <i class="fas fa-list"></i>
            Transfer Listesi
        </a>
        <a href="/transfer-analizi" class="menu-item <%= currentPage === 'transfer-analizi' ? 'active' : '' %>">
            <i class="fas fa-chart-line"></i>
            Transfer Analizi
        </a>
        <a href="/optimal-oyuncu" class="menu-item <%= currentPage === 'optimal-oyuncu' ? 'active' : '' %>">
