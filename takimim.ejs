      </div>
    </div>
  </div>

  <div class="wonderkid-section">
    <h2 class="wonderkid-title">Wonderkid Belirleme</h2>
    <div class="filter-buttons">
      <button class="filter-button" onclick="filterWonderkids('potential')">Potansiyel</button>
      <button class="filter-button" onclick="filterWonderkids('performance')">Performans</button>
      <button class="filter-button" onclick="filterWonderkids('value')">Değer</button>
    </div>
    <div id="wonderkid-container">
      <!-- Wonderkid listesi dinamik olarak yüklenecek -->
    </div>
  </div>

  <script>
    // Oyuncu filtreleme fonksiyonları
    function filterByPosition(position) {
      const cards = document.querySelectorAll('.player-card');
      cards.forEach(card => {
        if (card.getAttribute('data-position') === position) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    }

    function showAllPlayers() {
      const cards = document.querySelectorAll('.player-card');
      cards.forEach(card => card.style.display = 'block');
    }

    // Wonderkid filtreleme fonksiyonu
    function filterWonderkids(criteria) {
      // AJAX ile wonderkid verilerini çek
      fetch(`/api/wonderkids?criteria=${criteria}`)
        .then(response => response.json())
        .then(data => {
          const container = document.getElementById('wonderkid-container');
          container.innerHTML = ''; // Mevcut listeyi temizle
          
          data.forEach(player => {
            const playerElement = document.createElement('div');
            playerElement.className = 'player-card highlight';
            playerElement.innerHTML = `
              <div class="player-info"><strong>İsim:</strong> ${player.isim}</div>
              <div class="player-info"><strong>Yaş:</strong> ${player.yas}</div>
              <div class="player-info"><strong>Potansiyel:</strong> ${player.potansiyel}</div>
              <div class="player-info"><strong>Değer:</strong> ${player.deger}</div>
            `;
            container.appendChild(playerElement);
          });
        });
    }
  </script>
</body>
</html>
</div>

